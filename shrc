# $FreeBSD$
#
# .shrc - bourne shell startup file 
#
# This file will be used if the shell is invoked for interactive use and
# the environment variable ENV is set to this file.
#
# see also sh(1), environ(7).
#


# some useful aliases
alias j=jobs
alias ll='ls -laFo'
alias l='ls -lh'
alias la='ls -a'

alias ls='ls --color=auto -FG'
alias gcc='gcc -Wall -Wextra  -Werror -ansi -pedantic -O3'
 
# # be paranoid
# alias cp='cp -ip'
# alias mv='mv -i'
# alias rm='rm -i'


# set prompt: ``username@hostname:directory $ '' 
PS1="\u@\h:\w \\$ "

# search path for cd(1)
# CDPATH=:$HOME

# Setting the correct keyboard layout
#kbdcontrol -l ~/.config/keyboard_tty/br275.thinkpad.kbd

# Source startx -- IMPORTANT !
[ `tty` = "/dev/ttyv0" ] && startx



# Function to synchronize github repository with my local machine, using
# ssh
gitsync () {
	git remote add     origin "https://github.com/rafaelpcarneiro/$1.git"
	git remote set-url origin "git@github.com:rafaelpcarneiro/$1.git"
}


# Set .local at PATH
export PATH=$PATH:~/.local/bin

# source shell scripts
. ~/.shell/weather.sh
